{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "g++ ${file} -o ${fileBasenameNoExtension}.debug.out -g `pkg-config --cflags --libs opencv` -std=c++11 ",
            "args": [
                "-L",
                "/opencv/opencv/modules/core/include/opencv2/core.hpp"      
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}